/* pages/classify/childComponents/classify-sort/classify-sort.wxss */

.classify-sort {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  color: #4b4b4b;
  margin-top: 150rpx;
}

.classify-sort view {
  display: flex;
  align-items: center;
}

.classify-cat {
  height: 150rpx;
}

.classify-ser {
  margin-top: 40rpx;
}

.classify-sor {
  margin-top: 0;
}

.classify-sort .showtext {
  border-radius: 30rpx;
  border: 2rpx solid grey;
  margin-left: 20rpx;
  margin-top: 30rpx;
  font-weight: 500;
  text-align: center;
  padding: 10rpx 5rpx;
}

.active {
  background: #049fff;
  color: white;
}
