/* pages/bookshelf/childComponents/bookshelf-banner/bookshelf-banner.wxss */

.banner {
  margin-top: 20rpx;
  margin-left: 30rpx;
}

.banner .info {
  display: flex;
  width: 95%;
  border-radius: 20rpx;
  box-shadow: 0 2px 10px #888;
}

.banner .info .showimg {
  flex-basis: 30%;
  height: 300rpx;
}

.banner .info .showimg image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
  box-shadow: 0 2px 10px #888;
}

.banner .info .right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 5rpx;
  text-align: center;
}

.banner .info .right .title {
  color: #049fff;
  font-weight: 700;
  font-size: 37rpx;
}

.banner .info .right .desc {
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-al;
  color: #999;
}

.banner .info .right .cat {
  color: #049fff;
  border-radius: 10rpx;
  border: 2rpx solid #049fff;
  padding: 3rpx 6rpx;
  width: 170rpx;
  margin-left: 10rpx;
}
