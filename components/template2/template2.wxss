/* components/template2/template2.wxss */

.tempalte2 {
  padding: 0 20rpx;
}

.tempalte2 .list .list-item {
  display: flex;
  margin-bottom: 30rpx;
  margin-top: 20rpx;
}

.tempalte2 .list .list-item .showimg {
  flex-basis: 30%;
  height: 300rpx;
  box-shadow: 0 5px 10px #888;
  border-radius: 20rpx;
}

.tempalte2 .list .list-item .showimg image {
  height: 100%;
  width: 100%;
  border-radius: 20rpx;
}

.tempalte2 .list .list-item .showinfo {
  flex: 1;
  display: flex;
  flex-direction: column;
  color: #999;
  margin-left: 20rpx;
  justify-content: space-between;
}

.tempalte2 .list .list-item .showinfo .title {
  font-weight: 700;
  color: #333;
  font-size: 45rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-al;
}

.tempalte2 .list .list-item .showinfo .desc {
  height: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  font-weight: 600;
}

.tempalte2 .list .list-item .showinfo .showsta {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.tempalte2 .list .list-item .showinfo .showsta .pen_name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-al;
  width: 38%;
  height: 50rpx;
}

.tempalte2 .list .list-item .showinfo .showsta .status {
  border: 1rpx solid #049fff;
  border-radius: 10rpx;
  color: #049fff;
  margin-left: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  padding: 0 5rpx;
}

.tempalte2 .list .list-item .showinfo .showsta .cat {
  border: 1rpx solid #ffad5e;
  border-radius: 10rpx;
  color: #ffad5e;
  font-size: 30rpx;
  font-weight: 600;
  margin-left: 10rpx;
}
